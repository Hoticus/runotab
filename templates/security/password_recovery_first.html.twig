{% extends 'base.html.twig' %}

{% block title %}{% trans %}Restore Password{% endtrans %}{% endblock %}

{% block main %}
    <main class="mt-12 lg:mt-32 mb-8"> 
        <img class="w-1/3 absolute bottom-0 hidden lg:block" src="{{ asset('build/images/password_recovery.svg') }}" alt="">
        <div class="container px-4 mx-auto">
            <h1 class="text-4xl text-center font-extrabold">{% trans %}Password recovery{% endtrans %}</h1>
            <p class="text-center mx-auto text-2xl sm:text-3xl w-3/4 md:w-1/3 font-semibold mt-4">{% trans %}Please enter the email address of the account you want to restore.{% endtrans %}</p>
            {{ form_start(form, {'attr': {'class': 'w-4/5 sm:w-1/2 lg:w-2/5 mx-auto flex flex-col justify-center space-y-7 mt-7'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'rounded-full bg-gray-100 border-0 focus:ring-transparent w-full font-bold py-4 placeholder-gray-400 text-3xl tracking-widest text-center'}}) }}
           
                <button type="submit" class="bg-blue-400 hover:bg-blue-500 py-3 rounded-full border text-white font-extrabold text-xl w-full lg:w-1/3 mx-auto focus:outline-none">{% trans %}Continue{% endtrans %}</button>
            
                {% for flashError in app.flashes('password_recovery_first_error') %}
                    <div class="bg-red-600 text-center mx-auto px-4 py-4 rounded-full font-bold text-md sm:text-lg text-white mt-4" role="alert">
                        {% trans %}Error{% endtrans %}:
                        {{ flashError|trans({}, 'validators') }}
                    </div>
                {% endfor %}
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}
